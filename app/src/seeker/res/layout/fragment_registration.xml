<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context="com.easy10.easy10.Activities.LoginActivity">

        <include layout="@layout/toolbar" />

        <FrameLayout
            android:id="@+id/frame_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView_registration_profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_user_location"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:src="@drawable/ic_add" />

        </FrameLayout>

        <EditText
            android:id="@+id/editText_registration_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:hint="@string/name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:nextFocusDown="@id/editText_registration_email"
            android:nextFocusForward="@id/editText_registration_email"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editText_registration_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:nextFocusDown="@id/editText_registration_password"
            android:nextFocusForward="@id/editText_registration_password"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editText_registration_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:hint="@string/password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:nextFocusDown="@id/editText_registration_confirm_password"
            android:nextFocusForward="@id/editText_registration_confirm_password" />

        <EditText
            android:id="@+id/editText_registration_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:hint="confirm_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:nextFocusDown="@id/editText_registration_phone"
            android:nextFocusForward="@id/editText_registration_phone" />

        <EditText
            android:id="@+id/editText_registration_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

            android:lines="1"
            android:maxLines="1" />

        <Button
            android:id="@+id/button_registration_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/button_email_background"
            android:gravity="center"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="normal" />


    </LinearLayout>

    <!--<com.wang.avi.AVLoadingIndicatorView-->
