<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_large"
    android:layout_marginEnd="@dimen/spacing_large"
    android:background="@drawable/rounded_corners_button_colorwhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal">

    <TextView
        android:id="@+id/dialog_title_txt"
        style="@style/ContentText_Black_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:gravity="center"
        android:text="@string/new_account_created_successfully" />

    <TextView
        android:id="@+id/dialog_msg_txt"
        style="@style/ContentText_Black_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:gravity="center"
        android:text="@string/dialog_please_activate_your_account_by_entering_the_code_sent_to_you_via_message" />

    <Button
        android:id="@+id/dialog_Activate_btn"
        style="@style/ContentText_White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_button_coloraccent"
        android:text="@string/activate" />

    <Button
        android:id="@+id/dialog_checkMsgApp_btn"
        style="@style/ContentText_White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:background="@drawable/rounded_corners_button_coloraccent"
        android:text="@string/check_your_messages" />

</LinearLayout>