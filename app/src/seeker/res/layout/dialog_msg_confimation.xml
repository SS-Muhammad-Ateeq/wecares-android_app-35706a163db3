<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_large"
    android:layout_marginEnd="@dimen/spacing_large"
    android:background="@drawable/dialog_corner_bg"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small">

    <TextView
        android:id="@+id/dialog_title_txt"
        style="@style/ContentText_Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:drawableStart="@drawable/ic_error_black_24dp"
        android:drawablePadding="@dimen/spacing_small"
        android:gravity="center_vertical"
        android:text="Alert" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:background="@color/grayDivider" />

    <TextView
        android:id="@+id/dialog_msg_txt"
        style="@style/ContentText_Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:gravity="center"
        android:text="Alert" />

    <EditText
        android:id="@+id/dialog_message_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:hint="write here..."
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/spacing_normal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_positive_btn"
            style="@style/ContentText_White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_weight=".5"
            android:background="@drawable/rounded_corners_button_coloraccent"
            android:text="@string/yes" />

        <Button
            android:id="@+id/dialog_negative_btn"
            style="@style/ContentText_White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/rounded_corners_button_coloraccent"
            android:text="@string/no"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>